<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">

    <TextView
        android:id="@+id/activity_movie_details_tvMovieTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/activity_movie_details_imMoviePoster"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_below="@id/activity_movie_details_tvMovieTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/movie_poster_content_description" />
    <TextView
        android:id="@+id/activity_movie_details_tvSynopsis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_movie_details_tvMovieTitle"
        android:layout_alignLeft="@id/activity_movie_details_imMoviePoster"
        android:layout_alignStart="@id/activity_movie_details_imMoviePoster"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>